<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">
    <ImageView
        android:id="@+id/activity_chooser_list_view_item_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_folder_24px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/file_image" />
    <TextView
        android:id="@+id/activity_chooser_list_view_item_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/activity_chooser_list_view_item_image"
        android:layout_toLeftOf="@id/activity_chooser_list_view_item_info_text"
        android:layout_toEndOf="@id/activity_chooser_list_view_item_image"
        android:layout_toStartOf="@id/activity_chooser_list_view_item_info_text"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp">
        <TextView
            android:id="@+id/activity_chooser_list_view_item_title_text"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#323232"/>
        <TextView
            android:id="@+id/activity_chooser_list_view_item_last_edit_text"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_chooser_list_view_item_title_text"/>
    </RelativeLayout>

</RelativeLayout>